void readCredentials() {
  for (int i = 0; i < 32; ++i) {
    ssid[i] = EEPROM.read(i);
    password[i] = EEPROM.read(32 + i);
    CHAT_ID[i] = EEPROM.read(64 + i);
  }
}

void saveCredentials() {
  for (int i = 0; i < 32; ++i) {
    EEPROM.write(i, ssid[i]);
    EEPROM.write(32 + i, password[i]);
  }
  EEPROM.commit();
}
void saveChatID() {
  for (int i = 0; i < 32; ++i) {
    EEPROM.write(64 + i, CHAT_ID[i]);
  }
  EEPROM.commit();
}
